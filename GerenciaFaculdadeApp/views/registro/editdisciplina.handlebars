{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Editar disciplina: </h3>
<div class="card">
    <div class="card-body">
        <form action="/registro/disciplina/edit" method="POST">
            <input type="hidden" value="{{disciplina.id}}" name="id">
            <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" placeholder="Nome da disciplina" value="{{disciplina.nome}}" class="form-control">
            <label for="codigo">C칩digo: </label>
                <input type="text" id="codigo" name="codigo" placeholder="C칩digo da disciplina" value="{{disciplina.codigo}}" class="form-control">
            <label for="ch">Carga hor치ria: </label>
                <input type="number" id="ch" name="ch" placeholder="Carga hor치ria" value="{{disciplina.ch}}" class="form-control">
            <label for="professor">Selecione o professor: </label>
            <select name="professor" id="professor" class="form-control">
                {{#each professor}}
                    <option value="{{id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum professor encontrado</option>
                {{/each}}
            </select>
            <label for="monitor">Selecione o monitor: </label>
            <select name="monitor" id="monitor" class="form-control">
                <option value="">Nenhum monitor selecionado</option>
                {{#each estudante}}
                    <option value="{{cpf}}">{{nome}}</option>  
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Editar disciplina</button>
        </form>
    </div>
</div>