{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Editar estudante: </h3>
<div class="card">
    <div class="card-body">
        <form action="/registro/estudante/edit" method="POST">
            <input type="hidden" value="{{estudante.id}}" name="id">
            <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" placeholder="Nome do estudante" value="{{estudante.nome}}" class="form-control">
            <label for="cpf">CPF: </label>
                <input type="text" id="cpf" name="cpf" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" placeholder="123.456.789-29" value="{{estudante.cpf}}" class="form-control">
            <label for="endereco">Endereço: </label>
                <input type="text" id="endereco" name="endereco" placeholder="Endereço" value="{{estudante.endereco}}" class="form-control">
            <label for="cod_matricula">Código de matrícula: </label>
                <input type="number" id="cod_matricula" name="cod_matricula" placeholder="Código de matrícula" min="1" value="{{estudante.cod_matricula}}" class="form-control">
            <label for="curso">Selecione o curso: </label>
            <select name="curso" id="curso" class="form-control">
                {{#each curso}}
                    <option value="{{id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum curso encontrado</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Editar estudante</button>
        </form>
    </div>
</div>