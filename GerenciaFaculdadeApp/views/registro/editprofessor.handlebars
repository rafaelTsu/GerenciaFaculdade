{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Editar professor: </h3>
<div class="card">
    <div class="card-body">
        <form action="/registro/professor/edit" method="POST">
            <input type="hidden" value="{{professor.id}}" name="id">
            <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" placeholder="Nome do professor" value="{{professor.nome}}" class="form-control">
            <label for="cpf">Código do professor: </label>
                <input type="text" id="cpf" name="cpf" placeholder="CPF do professor" value="{{professor.cpf}}" class="form-control">
            <label for="especializacao">Especialização: </label>
                <input type="text" id="especializacao" name="especializacao" placeholder="Especialização" value="{{professor.especializacao}}" class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Editar professor</button>
        </form>
    </div>
</div>