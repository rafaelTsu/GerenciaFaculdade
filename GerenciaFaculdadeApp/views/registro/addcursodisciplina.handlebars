{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Registrar disciplina: </h3>
<div class="card">
    <div class="card-body">
        <form action="/registro/curso/cursodisciplina/novo" method="POST">
            <input type="hidden" name="id" value="{{curso.id}}">
            <label for="disciplina">Selecione a disciplina: </label>
            <select name="disciplina" id="disciplina" class="form-control">
                {{#each disciplina}}
                    <option value="{{id}}">{{nome}} [{{codigo}}]</option>
                {{else}}
                    <option value="0">Nenhuma disciplina encontrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Registrar disciplina</button>
        </form>
    </div>
</div>